{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "compileOnSave": false,
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "typeAcquisition": {
        "enable": true
    }
}
